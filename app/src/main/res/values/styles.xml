        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorConsumerNotifiactionText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CheckBoxConsumer" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
