<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="280dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5dp">

        <RelativeLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/likeButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="100dp">

                <View
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/heart_selected"
                    android:background="@drawable/skeleton"
                    android:id="@+id/addFavourite"
                    android:tint="@color/colorPrimaryDark" />

            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/skeleton"
                android:src="@drawable/masala_dosa_image" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:alpha="0.4"
                android:background="@color/colorBlack">

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:gravity="left"
                android:orientation="horizontal"
                android:paddingLeft="0dp">

                <View
                    android:id="@+id/oldPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="250"
                    android:background="@drawable/skeleton"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />

<!--                <View-->
<!--                    android:id="@+id/savePriceDiscount"-->
<!--                    android:layout_width="30dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:paddingLeft="5dp"-->
<!--                    android:background="@drawable/skeleton"-->
<!--                    android:text="Save 50"-->
<!--                    android:textColor="@color/colorWhite"-->
<!--                    android:textSize="16sp" />-->

<!--                <View-->
<!--                    android:id="@+id/price"-->
<!--                    android:layout_width="30dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:paddingLeft="5dp"-->
<!--                    android:background="@drawable/skeleton"-->
<!--                    android:text="200"-->
<!--                    android:textColor="@color/colorPrimaryDark"-->
<!--                    android:textSize="16sp" />-->


            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/bottomLayoutFirst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topLayout"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <View
                    android:id="@+id/foodTypeImage"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:src="@drawable/veg_icon"
                    android:background="@drawable/skeleton"
                    android:visibility="visible" />

                <View
                    android:id="@+id/itemName"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.6"
                    android:singleLine="true"
                    android:background="@drawable/skeleton"
                    android:text="Rave Kichadi"
                    android:textColor="#1E3854"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.4"
                    android:gravity="right">


                    <View
                        android:layout_width="16sp"
                        android:layout_height="16sp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/skeleton"
                        android:src="@drawable/rating_star" />

                    <View
                        android:id="@+id/ratingCount"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:text="5.0(75)"
                        android:background="@drawable/skeleton"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="1">

                <View
                    android:layout_width="15sp"
                    android:layout_height="15sp"
                    android:background="@drawable/skeleton"
                    android:src="@drawable/tick_available_image" />

                <View
                    android:id="@+id/availableText"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/skeleton"
                    android:text="Available(24)"
                    android:textColor="#78797B"
                    android:textSize="14sp" />


                <View
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:visibility="visible"
                    android:background="@drawable/skeleton"
                    android:src="@drawable/clock_timer_icon" />


                <View
                    android:layout_width="17dp"
                    android:layout_height="16dp"
                    android:visibility="gone"
                    android:background="@drawable/skeleton"
                    android:src="@drawable/food_delivery" />

                <View
                    android:id="@+id/timePreparation"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.5"
                    android:text="50-20 mins"
                    android:background="@drawable/skeleton"
                    android:textColor="#78797B"
                    android:textSize="14sp" />


            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/bottomLayoutFirst"
            android:layout_marginTop="10dp"
            android:background="@color/colorGrey" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/view"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:orientation="horizontal"

            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/chefImage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:background="@drawable/skeleton"
                    />

                <LinearLayout
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <View
                        android:layout_width="5dp"
                        android:layout_height="2dp"
                        android:background="#70707045" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="1dp"
                        android:background="#70707045" />

                    <View
                        android:layout_width="5dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="1dp"
                        android:background="#70707045" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center">

                <View
                    android:id="@+id/popLayImage"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/skeleton"
                    android:src="@drawable/burn_image" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/addBtnLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="visible">

                <View
                    android:id="@+id/addCart"
                    android:layout_width="60dp"
                    android:layout_height="34dp"
                    android:text="Add"
                    android:textAllCaps="false"
                    android:background="@drawable/skeleton"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/qtyLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="3">

                <TextView
                    android:id="@+id/decrease"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="#F7B917"
                    android:textSize="35sp" />


                <TextView
                    android:id="@+id/itemCount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#1E3854"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/increase"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="#F7B917"
                    android:textSize="35sp" />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>
