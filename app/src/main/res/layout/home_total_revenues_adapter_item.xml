<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_weight="1">

            <androidx.cardview.widget.CardView android:layout_width="match_parent"
                android:layout_height="165dp"
                card_view:cardCornerRadius="3dp"
                card_view:cardElevation="3dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                card_view:cardUseCompatPadding="true"
                android:layout_marginTop="20dp"
                card_view:cardBackgroundColor="@color/colorLoginCardBackground"
                app:cardBackgroundColor="@color/colorLoginCardBackground"
                xmlns:android="http://schemas.android.com/apk/res/android">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="2"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Franchisees"
                        android:textSize="21sp"
                        android:id="@+id/franchisesHeader"
                        android:layout_weight="1"
                        android:gravity="top"
                        android:layout_gravity="top|center"
                        android:textColor="@color/colorBlack"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="28sp"
                        android:gravity="center"
                        android:id="@+id/franchises"
                        android:layout_gravity="bottom|center"
                        android:textColor="@color/colorBlack"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView android:layout_width="match_parent"
                android:layout_height="165dp"
                card_view:cardCornerRadius="3dp"
                card_view:cardElevation="3dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                card_view:cardUseCompatPadding="true"
                android:layout_marginTop="20dp"
                card_view:cardBackgroundColor="@color/colorLoginCardBackground"
                app:cardBackgroundColor="@color/colorLoginCardBackground"
                xmlns:android="http://schemas.android.com/apk/res/android">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="2"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quote"
                            android:textSize="21sp"
                            android:layout_weight="1"
                            android:id="@+id/quotedHeader"
                            android:gravity="center"
                            android:textColor="@color/colorBlack"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="March, 2020"
                            android:id="@+id/quotedMonth"
                            android:gravity="bottom"
                            android:textSize="14sp"
                            android:layout_gravity="bottom|center"
                            android:textColor="@color/colorBlack"/>

                    </LinearLayout>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="28sp"
                        android:id="@+id/quoted"
                        android:gravity="bottom"
                        android:layout_gravity="bottom|center"
                        android:layout_weight="1"
                        android:textColor="@color/colorBlack"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_weight="1">

            <androidx.cardview.widget.CardView android:layout_width="match_parent"
                android:layout_height="165dp"
                card_view:cardCornerRadius="3dp"
                card_view:cardElevation="3dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                card_view:cardUseCompatPadding="true"
                android:layout_marginTop="10dp"
                card_view:cardBackgroundColor="@color/colorLoginCardBackground"
                app:cardBackgroundColor="@color/colorLoginCardBackground"
                xmlns:android="http://schemas.android.com/apk/res/android">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Revenue"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="21sp"
                            android:id="@+id/revenueHeader"
                            android:textColor="@color/colorBlack"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="March, 2020"
                            android:id="@+id/revenueMonthHeader"
                            android:gravity="bottom"
                            android:textSize="14sp"
                            android:layout_gravity="bottom|center"
                            android:textColor="@color/colorBlack"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:gravity="bottom|center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="test"
                            android:textSize="28sp"
                            android:gravity="bottom"
                            android:id="@+id/revenue"
                            android:layout_gravity="bottom|center"
                            android:textColor="@color/colorBlack"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/statusImage"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/franchise_in_image"/>

                    </LinearLayout>




                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView android:layout_width="match_parent"
                android:layout_height="165dp"
                card_view:cardCornerRadius="3dp"
                card_view:cardElevation="3dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                card_view:cardUseCompatPadding="true"
                android:layout_marginTop="10dp"
                card_view:cardBackgroundColor="@color/colorLoginCardBackground"
                app:cardBackgroundColor="@color/colorLoginCardBackground"
                xmlns:android="http://schemas.android.com/apk/res/android">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="2"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Invoice"
                            android:textSize="21sp"
                            android:layout_weight="1"
                            android:id="@+id/invoiceHeader"
                            android:gravity="center"
                            android:textColor="@color/colorBlack"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="March, 2020"
                            android:id="@+id/outstandingMonth"
                            android:gravity="bottom"
                            android:textSize="14sp"
                            android:layout_gravity="bottom|center"
                            android:textColor="@color/colorBlack"/>
                    </LinearLayout>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="test"
                        android:layout_weight="1"
                        android:id="@+id/invoice"
                        android:textSize="28sp"
                        android:layout_gravity="bottom|center"
                        android:gravity="bottom"
                        android:textColor="@color/colorBlack"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>