<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include
        layout="@layout/progress_bar"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/progressBarLayout"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/filtersrecyclerView"
        android:layout_marginLeft="15dp"
        android:visibility="visible"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"/>

<!--    <com.cunoraz.tagview.TagView-->
<!--        xmlns:tagview="http://schemas.android.com/apk/res-auto"-->
<!--        android:id="@+id/tag_group"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_margin="10dp"-->
<!--        tagview:lineMargin="5dp"-->
<!--        tagview:tagMargin="5dp"-->
<!--        tagview:textPaddingLeft="8dp"-->
<!--        tagview:textPaddingTop="5dp"-->
<!--        tagview:textPaddingRight="8dp"-->
<!--        tagview:textPaddingBottom="5dp" />-->

    <co.lujun.androidtagview.TagContainerLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:container_enable_drag="false"
        app:horizontal_interval="10dp"
        app:vertical_interval="10dp"
        app:tag_clickable="true"
        android:id="@+id/tag_group"
        android:background="@color/colorWhite"
        android:layout_marginLeft="15dp"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/filtersrecyclerView"
        app:tag_theme="pure_teal" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rootLay"
        android:visibility="visible"
        android:layout_below="@+id/filtersrecyclerView">

        <androidx.cardview.widget.CardView
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/searchText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:maxLines="1"
                    android:inputType="text"
                    android:ellipsize="end"
                    android:textSize="14sp"
                   android:layout_weight="0.9"
                    android:focusable="false"
                    android:hint="Choose Filter"
                    android:paddingHorizontal="20dp" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitCenter"
                    android:id="@+id/filterIcon"
                    android:src="@drawable/filtericon"/>

            </LinearLayout>



        </androidx.cardview.widget.CardView>



        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:layout_below="@+id/searchBar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp">




                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Category"
                            android:textSize="20sp"
                            android:id="@+id/categoryheader"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="#112132"/>

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_below="@+id/categoryheader"
                            android:id="@+id/categoryshimmerLayout">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="10dp">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <include
                                        layout="@layout/shimmer_layout_category_item"/>


                                    <include
                                        layout="@layout/shimmer_layout_category_item"/>



                                    <include
                                        layout="@layout/shimmer_layout_category_item"/>



                                    <include
                                        layout="@layout/shimmer_layout_category_item"/>


                                    <include
                                        layout="@layout/shimmer_layout_category_item"/>



                                </LinearLayout>


                            </LinearLayout>

                        </com.facebook.shimmer.ShimmerFrameLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/categoryRecyclerView"
                            android:layout_below="@+id/categoryheader"
                            android:layout_marginTop="10dp"/>



                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp">




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1"
                            android:id="@+id/headerLayout"
                            android:layout_marginRight="10dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Top Offers"
                                android:textSize="20sp"
                                android:id="@+id/topOfferheader"
                                android:fontFamily="@font/poppins_bold"
                                android:layout_weight="0.5"
                                android:textColor="#112132"/>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="0.5"
                                android:layout_gravity="center"
                                android:id="@+id/offersViewAll"
                                android:gravity="right">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="View all"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textColor="@color/colorPrimaryDark"/>

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="15dp"
                                    android:tint="@color/colorPrimaryDark"
                                    android:layout_gravity="center"
                                    android:src="@drawable/skip_arrow_image"/>

                            </LinearLayout>



                        </LinearLayout>

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_below="@+id/headerLayout"
                            android:id="@+id/offersshimmerLayout">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <include
                                        layout="@layout/shimmer_layout_food_item"/>

                                    <include
                                        layout="@layout/shimmer_layout_food_item"/>


                                    <include
                                        layout="@layout/shimmer_layout_food_item"/>




                                </LinearLayout>



                            </LinearLayout>

                        </com.facebook.shimmer.ShimmerFrameLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/topOfferrecyclerView"
                            android:layout_below="@+id/headerLayout"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:text="No records found"
                            android:textSize="16sp"
                            android:textColor="@color/colorBlack"
                            android:layout_below="@+id/headerLayout"
                            android:gravity="center"
                            android:visibility="gone"
                            android:id="@+id/noRecordsFound"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1"
                            android:id="@+id/headerLayout"
                            android:layout_marginRight="10dp">

                            <TextView
                                android:id="@+id/chefheader"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.75"
                                android:fontFamily="@font/poppins_bold"
                                android:text="Chefs at your location"
                                android:textColor="#112132"
                                android:textSize="20sp" />


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.25"
                                android:gravity="right"
                                android:orientation="horizontal"
                                android:visibility="invisible">

                                <TextView
                                    android:id="@+id/chefviewAll"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:text="View all"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/skip_arrow_image"
                                    android:tint="@color/colorPrimaryDark" />

                            </LinearLayout>



                        </LinearLayout>




                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/headerLayout"
                            android:layout_marginTop="15dp"
                            android:orientation="vertical">

                            <com.facebook.shimmer.ShimmerFrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:id="@+id/chefsshimmerLayout">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_below="@+id/headerLayout"
                                    android:layout_marginTop="10dp">


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <include
                                            layout="@layout/nearby_chefs_shimmer"/>


                                        <include
                                            layout="@layout/nearby_chefs_shimmer"/>



                                        <include
                                            layout="@layout/nearby_chefs_shimmer"/>



                                        <include
                                            layout="@layout/nearby_chefs_shimmer"/>


                                        <include
                                            layout="@layout/shimmer_layout_category_item"/>



                                    </LinearLayout>


                                </LinearLayout>

                            </com.facebook.shimmer.ShimmerFrameLayout>


                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/chefsrecyclerView"
                                android:layout_marginTop="10dp"/>



                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Do you wish to join as\nChef?"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:fontFamily="@font/poppins_medium"
                                android:id="@+id/wishHeader"
                                android:textColor="#1E3854"
                                android:textSize="20sp"/>

                            <LinearLayout
                                android:id="@+id/joinUs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:gravity="right">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Join us"
                                    android:textSize="20sp"
                                    android:layout_marginRight="10dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textStyle="bold"
                                    android:id="@+id/jointext"
                                    android:textColor="@color/colorPrimaryDark"/>

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="15dp"
                                    android:tint="@color/colorPrimaryDark"
                                    android:layout_gravity="center"
                                    android:src="@drawable/skip_arrow_image"/>

                            </LinearLayout>


                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1"
                            android:id="@+id/headerLayout"
                            android:layout_marginRight="10dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Popular choices"
                                android:textSize="20sp"
                                android:id="@+id/popularChoiceheader"
                                android:fontFamily="@font/poppins_bold"
                                android:layout_weight="0.5"
                                android:textColor="#112132"/>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="0.5"
                                android:layout_gravity="center"
                                android:id="@+id/popularLay"
                                android:visibility="invisible"
                                android:gravity="right">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="View all"
                                    android:textSize="16sp"
                                    android:layout_marginRight="10dp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/poppins_medium"
                                    android:id="@+id/popularviewAll"
                                    android:textColor="@color/colorPrimaryDark"/>

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="15dp"
                                    android:tint="@color/colorPrimaryDark"
                                    android:layout_gravity="center"
                                    android:src="@drawable/skip_arrow_image"/>

                            </LinearLayout>



                        </LinearLayout>

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_below="@+id/headerLayout"
                            android:id="@+id/popularshimmerLayout">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <include
                                        layout="@layout/shimmer_layout_food_item"/>

                                    <include
                                        layout="@layout/shimmer_layout_food_item"/>


                                    <include
                                        layout="@layout/shimmer_layout_food_item"/>




                                </LinearLayout>



                            </LinearLayout>

                        </com.facebook.shimmer.ShimmerFrameLayout>


                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/popularrecyclerView"
                            android:layout_marginBottom="50dp"
                            android:layout_below="@+id/headerLayout"
                            android:layout_marginTop="10dp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1"
                            android:id="@+id/headerLayout"
                            android:layout_marginRight="10dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Recently Viewed"
                                android:textSize="20sp"
                                android:id="@+id/recentheader"
                                android:fontFamily="@font/poppins_bold"
                                android:layout_weight="0.5"
                                android:textColor="#112132"/>


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="0.5"
                                android:layout_gravity="center"
                                android:id="@+id/recentViewAllLay"
                                android:visibility="gone"
                                android:gravity="right">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="View all"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/poppins_medium"
                                    android:layout_marginRight="10dp"
                                    android:id="@+id/viewAll"
                                    android:textColor="@color/colorPrimaryDark"/>

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="15dp"
                                    android:tint="@color/colorPrimaryDark"
                                    android:layout_gravity="center"
                                    android:src="@drawable/skip_arrow_image"/>

                            </LinearLayout>



                        </LinearLayout>

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_below="@+id/headerLayout"
                            android:id="@+id/recentlyshimmerLayout">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <include
                                        layout="@layout/shimmer_layout_food_item"/>

                                    <include
                                        layout="@layout/shimmer_layout_food_item"/>


                                    <include
                                        layout="@layout/shimmer_layout_food_item"/>




                                </LinearLayout>



                            </LinearLayout>

                        </com.facebook.shimmer.ShimmerFrameLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/recentlyrecyclerView"
                            android:layout_below="@+id/headerLayout"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="50dp"/>

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>



    </RelativeLayout>


    <LinearLayout
        android:id="@+id/cartLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/conusmer_bottom_layout_border"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="1">

        <TextView
            android:id="@+id/totalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text=""
            android:fontFamily="@font/poppins_light"
            android:textColor="#1E3854"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/reSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:text="â‚¹"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#1E3854"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:text=""
            android:fontFamily="@font/poppins_light"
            android:textColor="#1E3854"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/checkoutText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="Checkout"
            android:textColor="#1E3854"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>