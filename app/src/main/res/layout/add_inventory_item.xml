<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGreyCardBG">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.85"
        android:gravity="center|center_horizontal|left"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mobile_id3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|left"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_light"
                    android:gravity="center|start|center_horizontal|left"
                    android:maxLines="1"
                    android:text="Idly"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#000"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|left"
                android:layout_weight="0.2"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mobile_id4"
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent"
                    android:layout_gravity="start|left"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_light"
                    android:gravity="center|start|center_horizontal|left"
                    android:maxLines="1"
                    android:text="10000"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#000"
                    android:textSize="@dimen/_9sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|left"
                android:layout_weight="0.1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mobile_id5"
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent"
                    android:layout_gravity="start|left"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_light"
                    android:gravity="center|start|center_horizontal|left"
                    android:maxLines="1"
                    android:text="Kg"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#000"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|left"
                android:layout_weight="0.2"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mobile_id6"
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent"
                    android:layout_gravity="start|left"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_light"
                    android:gravity="center|start|center_horizontal|left"
                    android:maxLines="1"
                    android:text="DEMART............"
                    android:textAlignment="center"

                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#000"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|left"
                android:layout_weight="0.1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/delete_id3"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/closei" />

            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@drawable/bg_horizontal_dotted_line" />

    </LinearLayout>


</RelativeLayout>