<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aandroid="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fulllayout_id"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Item"
                android:textColor="#000"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Price"
                    android:textColor="#000000"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order"
                    android:textColor="#000000"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF0000FF"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_6sdp"
        android:background="@drawable/corporate_dot_box_gray"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/listclick_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="#fff"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dish_img"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"

                    android:padding="@dimen/_2sdp"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp">

                <TextView
                    android:id="@+id/title_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MEXICAN BOWL "
                    android:textColor="#000"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/des_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:paddingTop="@dimen/_2sdp"
                    android:text="BEANS/RICE/SALSA/SALAD/SPRING ONION/CAPSICUM/GLUACOMOLE"
                    android:textColor="#EB444444"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="normal"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:paddingTop="@dimen/_3sdp"
                    android:text="Fuisset mentitum deleniti sit ea. Fuisset mentitum deleniti sit ea. Fuisset mentitFuisset mentitum deleniti sit ea. Fuisset mentitum deleniti sit ea. Fuisset mentitum deleniti sit eaFuisset mentitum deleniti sit ea. Fuisset mentitum deleniti sit ea. Fuisset mentitFuisset mentitum deleniti sit ea. Fuisset mentitum deleniti sit ea. Fuisset mentitum deleniti sit ea.um deleniti sit ea..um deleniti sit ea."
                    android:textColor="#444"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="normal"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/price_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rs.10000/-"
                                android:textColor="#F8444444"
                                android:textSize="@dimen/_9sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/sub_price_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="for half kg"
                                android:textColor="#444"
                                android:textSize="@dimen/_8sdp"
                                android:textStyle="normal"
                                android:visibility="visible" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <CheckBox
                            android:id="@+id/checkStatus_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="false"
                            android:text="Click Add Schedule"
                            android:textSize="@dimen/_9sdp"
                            android:visibility="gone"
                            app:buttonTint="@color/colorConsumerPrimary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/inc_dec_id"
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/minus_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_20sdp"
                                    android:tint="#e54750"
                                    app:srcCompat="@drawable/minus" />

                                <EditText
                                    android:id="@+id/quantity_id"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_22sdp"
                                    android:background="@drawable/consumer_edit_text_border_black_real"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:maxLength="3"
                                    android:text="1"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold"
                                    aandroid:textColor="#F8444444" />

                                <ImageView
                                    android:id="@+id/plus_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_20sdp"
                                    android:tint="#e54750"
                                    app:srcCompat="@drawable/plus" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/add_linear_id"
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <Button
                                    android:id="@+id/addbutton_id"
                                    android:layout_width="match_parent"

                                    android:layout_height="@dimen/_22sdp"
                                    android:background="@drawable/corporate_gradient_background"
                                    android:text="Add"
                                    android:textColor="#fff"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corporate_dot_box"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_2sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingRight="@dimen/_2sdp"
                android:paddingBottom="@dimen/_4sdp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="horizontal"
                        android:padding="@dimen/_2sdp">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.35"
                            android:gravity="center|start"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/price_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Only Once"
                                android:textColor="#F8444444"
                                android:textSize="@dimen/_9sdp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.65"
                            android:gravity="start"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/des_id2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:paddingTop="@dimen/_2sdp"
                                android:text="5-Mar"
                                android:textColor="#EB444444"
                                android:textSize="@dimen/_8sdp"
                                android:textStyle="normal"
                                android:visibility="visible" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/only_once_date_id"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                app:srcCompat="@drawable/calendernewsat" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/inc_dec_id"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/minus_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_20sdp"
                                    android:tint="#e54750"
                                    app:srcCompat="@drawable/minus" />

                                <EditText
                                    android:id="@+id/quantity_id"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:background="@drawable/consumer_edit_text_border_black_real"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:maxLength="3"
                                    android:text="1"
                                    android:textSize="@dimen/_9sdp"
                                    android:textStyle="bold"
                                    aandroid:textColor="#F8444444" />

                                <ImageView
                                    android:id="@+id/plus_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_20sdp"
                                    android:tint="#e54750"
                                    app:srcCompat="@drawable/plus" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/add_linear_id"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <Button
                                    android:id="@+id/addbutton_id"
                                    android:layout_width="match_parent"

                                    android:layout_height="@dimen/_22sdp"
                                    android:background="@drawable/corporate_gradient_background"
                                    android:text="Add"
                                    android:textColor="#fff"
                                    android:textSize="@dimen/_9sdp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#4D444444" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="horizontal"
                        android:padding="@dimen/_2sdp">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.35"
                            android:gravity="center|start"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/price_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Custom"
                                android:textColor="#F8444444"
                                android:textSize="@dimen/_9sdp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.65"
                            android:gravity="start"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/des_id2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:paddingTop="@dimen/_2sdp"
                                android:text="5-Mar   To   20-Mar"
                                android:textColor="#EB444444"
                                android:textSize="@dimen/_8sdp"
                                android:textStyle="normal"
                                android:visibility="visible" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/custom_date_id"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                app:srcCompat="@drawable/calendernewsat" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/inc_dec_id2"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/minus_id2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_20sdp"
                                    android:tint="#e54750"
                                    app:srcCompat="@drawable/minus" />

                                <EditText
                                    android:id="@+id/quantity_id2"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:background="@drawable/consumer_edit_text_border_black_real"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:maxLength="3"
                                    android:text="1"
                                    android:textSize="@dimen/_9sdp"
                                    android:textStyle="bold"
                                    aandroid:textColor="#F8444444" />

                                <ImageView
                                    android:id="@+id/plus_id2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_20sdp"
                                    android:tint="#e54750"
                                    app:srcCompat="@drawable/plus" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/add_linear_id2"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <Button
                                    android:id="@+id/addbutton_id2"

                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_22sdp"
                                    android:background="@drawable/corporate_gradient_background"
                                    android:text="Add"
                                    android:textColor="#fff"
                                    android:textSize="@dimen/_9sdp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <!--    <View-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="1dp"-->
    <!--        android:background="#fff" />-->
</LinearLayout>
