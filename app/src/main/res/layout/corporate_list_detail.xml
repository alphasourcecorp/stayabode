                                                android:textSize="@dimen/_8sdp"
                                                android:textStyle="bold" />

                                            <View
                                                android:layout_width="1dp"
                                                android:layout_height="@dimen/_10sdp"
                                                android:layout_marginStart="@dimen/_10sdp"
