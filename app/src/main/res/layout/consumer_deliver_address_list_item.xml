<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="25dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="0.1"
                    android:checked="true"
                    android:gravity="left|top"
                    android:theme="@style/CheckBoxConsumer" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.9"
                    android:gravity="left|center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_marginRight="20dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Radha KrishnaKrishnaKrishnaKrishnaKrishnaKrishnaKrishna"
                        android:textColor="@color/colorConsumerNotifiactionText"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/addressLine1Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:singleLine="true"
                        android:text="H-No - 11-14-12, Sirinagar Colony,"
                        android:textColor="@color/colorConsumerNotifiactionText"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/addressLine2Value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:singleLine="true"
                        android:text="Street 42, Kammanhali, BLR."
                        android:textColor="@color/colorConsumerNotifiactionText"
                        android:textSize="14sp" />

                </LinearLayout>


            </LinearLayout>


            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:background="@color/colorGrey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mobileNumberHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="60dp"
                    android:fontFamily="@font/poppins_light"
                    android:singleLine="true"
                    android:text="Mobile - "
                    android:textColor="@color/colorConsumerNotifiactionText"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/mobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/colorConsumerNotifiactionText"
                    android:textSize="14sp" />

            </LinearLayout>


            <Button
                android:id="@+id/editAddressButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/add_items_border"
                android:text="Edit Address"
                android:textAllCaps="false"
                android:visibility="gone"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

            <Button
                android:id="@+id/addAddressButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="45dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/add_items_border"
                android:text="Add New Address"
                android:textAllCaps="false"
                android:visibility="gone"
                android:textColor="@color/colorBlack"
                android:textSize="20sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/deleteIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/delete_icon"
            android:tint="@color/colorNotificationBG" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>